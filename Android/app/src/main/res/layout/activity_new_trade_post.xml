    <LinearLayout
        android:id="@+id/newPostPlantType"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/translucent_containers"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPostPlantTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/NewPostTextInputLayoutAppearance"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plant you are giving"
                android:textCursorDrawable="@drawable/greycursor"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:inputType="text"
                app:backgroundTint="@color/transparent"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newPostPlantsWanted"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/translucent_containers"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPostPlantsWantedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/NewPostTextInputLayoutAppearance"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plants you want"
                android:textCursorDrawable="@drawable/greycursor"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:inputType="text"
                app:backgroundTint="@color/transparent"/>

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/newPostUpload"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/translucent_containers"
        android:orientation="horizontal"
        android:padding="20dp">


        <LinearLayout
            android:id="@+id/newPostUploadHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newPostUploadHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:text="Upload photo"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newPostUploadButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-240dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/newPostUploadCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_camera" />

            <Button
                android:id="@+id/newPostUploadGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_gallery"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newPostUploadDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-230dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newPostUploadCameraText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:text="Camera"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/newPostUploadGalleryText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="70dp"
                android:textColor="@color/grey"
                android:text="Gallery"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newPostDescription"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/translucent_containers"
        android:orientation="horizontal"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPostDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/NewPostTextInputLayoutAppearance"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textCursorDrawable="@drawable/greycursor"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:inputType="text"
                app:backgroundTint="@color/transparent"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/createNewPostFAB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/lightgreen" />


</LinearLayout>
