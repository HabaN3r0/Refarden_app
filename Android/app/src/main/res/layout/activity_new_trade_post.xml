<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:id="@+id/newPostScrollView"
    tools:context="kenneth.com.refardenapp.NewTradePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/newPostHeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-10sp"
            android:padding="20sp">

            <LinearLayout
                android:id="@+id/newPostBackButtonLinearLayout"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginStart="-20sp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/newPostBackButton"
                    android:layout_width="20sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="20sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_action_back" />

            </LinearLayout>

            <TextView
                android:id="@+id/newPostHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-30sp"
                android:text="New Post"
                android:textSize="25sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:id="@+id/newPostProfile"-->
        <!--android:layout_width="350sp"-->
        <!--android:layout_height="100sp"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@drawable/translucent_containers"-->
        <!--android:orientation="horizontal"-->
        <!--android:padding="20sp">-->

        <!--<ImageView-->
        <!--android:id="@+id/newPostProfileImage"-->
        <!--android:layout_width="50sp"-->
        <!--android:layout_height="50sp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@mipmap/ic_launcher_round" />-->

        <!--<TextView-->
        <!--android:id="@+id/newPostProfileName"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginStart="20sp"-->
        <!--android:text="Name"-->
        <!--android:textSize="20sp" />-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/newPostPlantType"
            android:layout_width="350sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginTop="-20sp"
            android:background="@drawable/translucent_containers"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/newPostPlantTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:theme="@style/NewPostTextInputLayoutAppearance"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plant you are giving"
                    android:textCursorDrawable="@drawable/greycursor"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    app:backgroundTint="@color/transparent"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newPostPlantsWanted"
            android:layout_width="350sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/translucent_containers"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/newPostPlantsWantedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:theme="@style/NewPostTextInputLayoutAppearance"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plants you want"
                    android:textCursorDrawable="@drawable/greycursor"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    app:backgroundTint="@color/transparent"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/newPostUpload"
            android:layout_width="350sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/translucent_containers"
            android:orientation="horizontal"
            android:padding="20sp">


            <LinearLayout
                android:id="@+id/newPostUploadHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/newPostUploadHeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/grey"
                    android:text="Upload photo"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/newPostUploadButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-240sp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newPostUploadCamera"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_camera" />

                <Button
                    android:id="@+id/newPostUploadGallery"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="70sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_gallery"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/newPostUploadDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-230sp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newPostUploadCameraText"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/grey"
                    android:text="Camera"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/newPostUploadGalleryText"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="70sp"
                    android:textColor="@color/grey"
                    android:text="Gallery"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newPostDescription"
            android:layout_width="350sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/translucent_containers"
            android:orientation="horizontal"
            android:padding="20sp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/newPostDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/NewPostTextInputLayoutAppearance"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:textCursorDrawable="@drawable/greycursor"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    app:backgroundTint="@color/transparent"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/createNewPostFAB"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginStart="175sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/brightgrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450sp"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>

</ScrollView>
