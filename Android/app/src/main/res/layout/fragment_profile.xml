<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profileInfo"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10sp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profileBirth"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginStart="-150sp"
            android:layout_marginTop="35sp"
            android:text="Birthday"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:layout_marginStart="-150sp"
            android:layout_marginTop="60sp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profileExperience"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginStart="-150sp"
            android:layout_marginTop="85sp"
            android:text="Experience"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilePlants"
        android:layout_width="350sp"
        android:layout_height="450sp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:padding="10sp"
        android:orientation="vertical"
        android:background="@drawable/translucent_containers">

        <TextView
            android:id="@+id/profilePlantHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="My plants:  "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profilePlantTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20sp"
            android:text="Nil"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>



</LinearLayout>