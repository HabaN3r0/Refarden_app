    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="-250sp"
        android:text="Growing Conditions"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/growthEnvironment"
        android:layout_width="500sp"
        android:layout_height="150sp"
        android:layout_marginStart="-50sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/translucent_containers"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/growthRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temperatureIcon"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="50sp"
                android:src="@mipmap/ic_launcher_temperature1" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:text="Temp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/solutionIcon"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="-10sp"
                android:src="@mipmap/ic_launcher_solution1" />

            <TextView
                android:id="@+id/solution"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:text="Solution"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/humidityIcon"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="-10sp"
                android:src="@mipmap/ic_launcher_humidity1" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:text="Humidity"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
